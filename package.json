{
	"name": "ocamlformat-vscode-extension",
	"displayName": "ocamlformat-vscode-extension",
	"description": "",
	"version": "0.0.1",
	"engines": {
		"vscode": "^1.46.0",
		"node": "^12.18.1"
	},
	"categories": [
		"Other"
	],
	"activationEvents": [
		"onCommand:ocamlformat-vscode-extension.ocamlformat",
		"onLanguage:ocaml"
	],
	"main": "./out/extension.js",
	"contributes": {
		"languages": [
			{
				"id": "ocaml",
				"extensions": [
					".ml",
					".mli"
				]
			}
		],
		"commands": [
			{
				"command": "ocamlformat-vscode-extension.ocamlformat",
				"title": "Hello World"
			}
		],
		"configuration": {
			"title": "ocamlformat-vscode-extension",
			"properties": {
				"ocamlformat-vscode-extension.customOcamlformatPath": {
					"title": "Path to ocamlformat",
					"type": "string",
					"default": "",
					"description": "If empty, ${OPAM_SWITCH_PREFIX}/bin/ocamlformat is used."
				},
				"ocamlformat-vscode-extension.ocamlformatOption": {
					"title": "Option for ocamlformat",
					"type": "string",
					"default": "--inplace,--enable-outside-detected-project",
					"description": "If option is multiple, use a comma as delimited string."
				}
			}
		}
	},
	"scripts": {
		"vscode:prepublish": "npm run compile",
		"compile": "tsc -p ./",
		"lint": "eslint src --ext ts",
		"watch": "tsc -watch -p ./",
		"pretest": "npm run compile && npm run lint",
		"test": "node ./out/test/runTest.js"
	},
	"devDependencies": {
		"@types/glob": "^7.1.1",
		"@types/mocha": "^7.0.2",
		"@types/node": "^13.11.0",
		"@types/vscode": "^1.46.0",
		"@typescript-eslint/eslint-plugin": "^2.30.0",
		"@typescript-eslint/parser": "^2.30.0",
		"eslint": "^6.8.0",
		"eslint-config-prettier": "^6.11.0",
		"eslint-plugin-prettier": "^3.1.4",
		"glob": "^7.1.6",
		"mocha": "^7.1.2",
		"prettier": "^2.0.5",
		"typescript": "^3.8.3",
		"vscode-test": "^1.3.0"
	}
}
